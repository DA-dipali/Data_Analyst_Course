use test;
CREATE TABLE EMP
(
EMPID INT,NAME CHAR(20),SALARY INT,HIREDATE DATE
);

DESCRIBE EMP;

ALTER TABLE EMP ADD PHONE_NO INT;

DESCRIBE EMP;

ALTER TABLE EMP ADD (MAIL_ID CHAR(20),ADDRESS CHAR(30));
DESCRIBE EMP;

alter table emp modify mail_id int;--->WILL GIVE ERROR

alter table emp modify mail_id char(33);
DESCRIBE EMP;

alter table emp drop (address ,phone_no);--->--->WILL GIVE ERROR


alter table emp rename column name to emp_name;
DESCRIBE EMP;

alter table emp rename to new_emp;

DESCRIBE EMP---ERROR;
DESCRIBE NEW_EMP;

DROP TABLE NEW_EMP;

describe new_emp;--->ERROR

DESCRIBE EMP;
-----DML;

DESCRIBE EMP;

INSERT INTO EMP VALUES (1,'ALEX',2000,'2021-03-02');

INSERT INTO EMP VALUES (2,'RENU',3000,'2021-06-23'),(2,'BENNY',4000,'2021-07-02');

INSERT INTO EMP (EMPID,NAME) VALUES (3,'SMITH');

INSERT INTO EMP (HIREDATE,EMPID,NAME) VALUES ('2021-07-04',4,'SURAJ');

SELECT * FROM EMP;

UPDATE EMP SET SALARY=3000 WHERE NAME='ALEX';
SELECT * FROM EMP;
UPDATE EMP SET HIREDATE='2022-04-01' WHERE NAME ='ALEX';
SELECT * FROM EMP;
UPDATE EMP SET SALARY=SALARY+1000;
SELECT * FROM EMP;
UPDATE EMP SET SALARY=7000,HIREDATE='2021-06-07' WHERE NAME IN ('ALEX','RENU');
SELECT * FROM EMP;
DELETE FROM EMP WHERE NAME='ALEX';
SELECT * FROM EMP;

DELETE FROM EMP WHERE NAME IN ('RENU','BENNY');
SELECT * FROM EMP;

DELETE FROM EMP;--->ALL THE ROWS WILL BE DELETED.;

SELECT EMPID,NAME,SALARY,HIREDATE FROM EMP;

SELECT * FROM EMP;
DELETE FROM EMP WHERE SALARY=4000;